generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Rol {
  SUPER_ADMIN
  DOCENTE
  ESTUDIANTE
  DIRECTIVO
}

enum Estado {
  ACTIVO
  INACTIVO
}

model usuario {
  id        Int      @id
  nombre    String
  apellido  String
  email     String   @unique
  rol       String
  createdAt DateTime @default(now())
}

