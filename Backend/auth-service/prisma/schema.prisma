generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Rol {
  SUPER_ADMIN
  DOCENTE
  ESTUDIANTE
  DIRECTIVO
}

enum Estado {
  ACTIVO
  INACTIVO
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nombre        String
  apellido      String
  email         String   @unique
  password      String
  rol           Rol
  estado        Estado   @default(ACTIVO)
  fechaCreacion DateTime @default(now())
}
